#!/bin/sh
# mousse: CFD toolbox
# Copyright (C) 2011-2014 OpenFOAM Foundation
# Copyright (C) 2016 mousse project
#
# Script
#   mousse-clean-tutorials
#
# Description
#   Run either allwclean, allclean or default clean_case in current directory
#   and all its subdirectories.

# Source tutorial clean functions
. $WM_PROJECT_DIR/bin/tools/clean-functions

this_script=$0
[ "/${this_script#/}" = "$this_script" ] || this_script="$PWD/$this_script"

# If an argument is supplied do not execute ./Allwclean or ./Allclean
# (to avoid recursion)
if [ $# -eq 0 -a -f allwclean ]
then
	# Specialized script
	./allwclean
elif [ $# -eq 0 -a -f allclean ]
then
	# Specialized script
	./allclean
elif [ -d system ]
then
	# Normal case
	clean_case
elif [ -d _make ]
then
	# Normal application
	clean_application
else
	# Recurse into subdirectories
	for case_name in *
	do
		( cd $case_name 2>/dev/null && $this_script )
	done
fi

# vim: set ft=sh noet sw=2 ts=2 sts=2:
