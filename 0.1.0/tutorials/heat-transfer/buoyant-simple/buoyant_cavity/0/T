// mousse: CFD toolbox

FoamFile
{
  version     2.0;
  format      ascii;
  class       volScalarField;
  location    "0";
  object      T;
}

dimensions      [0 0 0 1 0 0 0];
internalField   uniform 293;

boundaryField
{
  frontAndBack
  {
    type            zeroGradient;
  }
  topAndBottom
  {
    type            zeroGradient;
  }
  hot
  {
    type            fixedValue;
    value           uniform 307.75; // 34.6 degC
  }
  cold
  {
    type            fixedValue;
    value           uniform 288.15; // 15 degC
  }
}

